<!DOCTYPE html>
<html lang = "en"><head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Signup</title>
</head>
<body>
    <h1>Register Below</h1>
    <ul>
        <% if (typeof errors != 'undefined') { %>
            <% errors.forEach(error=>{ %>
                <li><%= error.message %></li>
            <% }) %>    
        <% } %>
    </ul>
    <form action="/users/register" method="POST">
        <div>
            <input type="text" name="first_name" placeholder="Input First Name">
        </div>
        <div>
            <input type="text" name="last_name" placeholder="Input Last Name">
        </div>
        <div>
            <input type="email" name="email" placeholder="Input Email">
        </div>
        <div>
            <input type="password" name="password" placeholder="Input Password">
        </div>
        <div>
            <input type="text" name="role" placeholder="Input Role">
        </div>
        <div>
            <input type="text" name="company" placeholder="Input Company">
        </div>
        <div>
            <input type="text" name="department" placeholder="Input Department">
        </div>
        <div>
            <input type="submit" name="submit" value="Submit">
        </div>
    </form>
</body>

</html>